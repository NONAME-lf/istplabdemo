@model IEnumerable<ShopDomain.Model.Manufacturer>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.MnName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MnContactInfo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Country.CoName)
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MnName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MnContactInfo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Country.CoName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>