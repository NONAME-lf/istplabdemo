@model IEnumerable<dynamic>

@{
    ViewData["Title"] = "Orders by Total Amount";
}

<h2>Orders by Total Amount</h2>

<form method="get" class="mb-4">
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label for="minTotal">Minimum Total Amount:</label>
                <input type="number" step="0.01" class="form-control" id="minTotal" name="minTotal" required>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label>&nbsp;</label>
                <button type="submit" class="btn btn-primary form-control">Search</button>
            </div>
        </div>
    </div>
</form>

<table class="table">
    <thead>
        <tr>
            <th>Order ID</th>
            <th>User Name</th>
            <th>Total Amount</th>
            <th>Payment Method</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
                <tr>
                    <td>@item.OrderId</td>
                    <td>@item.UserName</td>
                    <td>@item.OdTotal.ToString("C")</td>
                    <td>@item.OdPayment</td>
                </tr>
        }
    </tbody>
</table>

<div>
    <a asp-action="Index" class="btn btn-secondary">Back to Menu</a>
</div> 