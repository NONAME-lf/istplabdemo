@model IEnumerable<dynamic>

@{
    ViewData["Title"] = "Products by Quantity and Manufacturer";
}

<h2>Products by Quantity and Manufacturer</h2>

<form method="get" class="mb-4">
    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                <label for="maxQuantity">Maximum Quantity:</label>
                <input type="number" class="form-control" id="maxQuantity" name="maxQuantity" required>
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <label for="manufacturerName">Manufacturer Name:</label>
                <input type="text" class="form-control" id="manufacturerName" name="manufacturerName" required>
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <label>&nbsp;</label>
                <button type="submit" class="btn btn-primary form-control">Search</button>
            </div>
        </div>
    </div>
</form>

<table class="table">
    <thead>
        <tr>
            <th>Product Name</th>
            <th>Quantity</th>
            <th>Price</th>
            <th>Manufacturer</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
                <tr>
                    <td>@item.PdName</td>
                    <td>@item.PdQuantity</td>
                    <td>@item.PdPrice.ToString("C")</td>
                    <td>@item.Manufacturer</td>
                </tr>
        }
    </tbody>
</table>

<div>
    <a asp-action="Index" class="btn btn-secondary">Back to Menu</a>
</div> 