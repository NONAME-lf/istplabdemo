@model IEnumerable<ShopDomain.Model.Category>

@{
    ViewData["Title"] = "Категорії";
}

<h1>Категорії</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Створити Нову</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CgName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CgChildCategory)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CgDescription)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CgName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CgChildCategory)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CgDescription)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-warning">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-info">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
