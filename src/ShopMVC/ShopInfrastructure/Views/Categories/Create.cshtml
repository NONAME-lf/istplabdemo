@model ShopDomain.Model.Category

@{
    ViewData["Title"] = "Create";
}

<h1>Створити</h1>

<h4>Категорія</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CgName" class="control-label"></label>
                <input asp-for="CgName" class="form-control" />
                <span asp-validation-for="CgName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CgChildCategory" class="control-label"></label>
                <input asp-for="CgChildCategory" class="form-control" />
                <span asp-validation-for="CgChildCategory" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CgDescription" class="control-label"></label>
                <input asp-for="CgDescription" class="form-control" />
                <span asp-validation-for="CgDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary my-2" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-light">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
